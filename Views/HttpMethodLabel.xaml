<UserControl x:Class="RestApiTester.HttpMethodLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border CornerRadius="3" Background="{Binding Color, Mode=OneWay}" VerticalAlignment="Center" Padding="0">
        <Label Content="{Binding Name, Mode=OneWay}" Foreground="White" FontWeight="Bold" Margin="0" Padding="10,3" />
    </Border>
</UserControl>
